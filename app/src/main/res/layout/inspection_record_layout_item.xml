<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/record_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="#cccccc"
                android:layout_width="1dp"
                android:layout_height="15dp"/>
            <ImageView
                android:tint="#2e6be6"
                android:src="@mipmap/radio_choseed"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:background="#cccccc"
                android:layout_width="1dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/record_time"
                android:textStyle="bold"
                android:text="2020-01-10"
                android:textColor="#2e6be6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#cccccc"
            android:layout_width="1dp"
            android:layout_height="15dp"/>
        <ImageView
            android:src="@mipmap/radio_choseed"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:background="#cccccc"
            android:layout_width="1dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>





        <LinearLayout
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/record_title"
                android:layout_marginTop="11dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="巡检"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/record_time_detail"
                android:layout_marginTop="3dp"
                android:textColor="#999999"
                android:textSize="12sp"
                android:text="2020-01-10 13:32:22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="描述:"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/record"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="asdfasdfasdfasdfffffffffffffffffffffffffffffffffffffasdfasdfasdfasdfasdfasdf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/record_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/inspection_dialog_icon_one"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                     />

                <ImageView
                    android:id="@+id/inspection_dialog_icon_two"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                  />

                <ImageView
                    android:id="@+id/inspection_dialog_icon_three"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>