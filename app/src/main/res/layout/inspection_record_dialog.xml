<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/common_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inspection_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="记录"
            android:textColor="@color/fire_control_theme"
            android:textSize="16sp" />

        <LinearLayout style="@style/inspection_item_info">

            <TextView
                style="@style/info_text"
                android:text="时间:" />

            <TextView
                android:id="@+id/inspection_dialog_time"
                style="@style/info_text"
                android:text="----" />

        </LinearLayout>

        <!--<LinearLayout style="@style/inspection_item_info">-->

            <!--<TextView-->
                <!--style="@style/info_text"-->
                <!--android:text="提交人：" />-->

            <!--<TextView-->
                <!--android:id="@+id/inspection_dialog_name"-->
                <!--style="@style/info_text"-->
                <!--android:text="&#45;&#45;&#45;&#45;" />-->

        <!--</LinearLayout>-->

        <LinearLayout style="@style/inspection_item_info">

            <TextView
                style="@style/info_text"
                android:text="备注：" />

            <TextView
                android:id="@+id/inspection_dialog_remark"
                style="@style/info_text"
                android:text="----" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/inspection_dialog_icon_one"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/inspection_dialog_icon_two"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/inspection_dialog_icon_three"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>