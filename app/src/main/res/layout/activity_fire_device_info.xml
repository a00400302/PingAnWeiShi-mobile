<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yxdz="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">


    <com.yxdz.common.view.TitleBarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        yxdz:titleBarBackVisible="true"
        yxdz:titleBarBackground="@color/fire_control_theme"
        yxdz:titleBarText="宇信科技"
        yxdz:titleBarTextColor="@color/white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/item_info">

                <TextView
                    style="@style/info_text"
                    android:text="设备名称：" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/fire_device_info_name"
                    style="@style/info_text"
                    android:text="----" />


                <ImageView
                    android:id="@+id/ivCamera1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@mipmap/play_video_bu" />


            </LinearLayout>


            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    style="@style/item_info"
                    android:layout_weight="1">

                    <TextView
                        style="@style/info_text"
                        android:text="设备类型：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/fire_device_info_type"
                        style="@style/info_text"
                        android:text="----" />

                </LinearLayout>


                <LinearLayout
                    style="@style/item_info"
                    android:layout_weight="1">

                    <TextView
                        style="@style/info_text"
                        android:text="设备状态：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/fire_device_info_state"
                        style="@style/info_text"
                        android:text="----" />

                </LinearLayout>
            </LinearLayout>


            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <LinearLayout style="@style/item_info">

                <TextView
                    style="@style/info_text"
                    android:text="安装位置：" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/fire_device_info_place_position"
                    style="@style/info_text"
                    android:text="----" />


            </LinearLayout>

            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone" />

            <LinearLayout
                style="@style/item_info"
                android:visibility="gone">

                <TextView
                    style="@style/info_text"
                    android:text="场所地址：" />

                <TextView
                    android:id="@+id/fire_device_info_place_address"
                    style="@style/info_text"
                    android:text="----" />

            </LinearLayout>


            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <LinearLayout
                android:id="@+id/navigation"
                style="@style/item_info">

                <TextView
                    style="@style/info_text"
                    android:text="所在场所：" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/fire_device_info_place_name"
                    style="@style/info_text"
                    android:text="----" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icons_forward" />


            </LinearLayout>

            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/item_info"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/info_text"
                        android:text="报警时段1：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fire_device_info_start_time"
                                style="@style/info_text"
                                android:text="----" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:text="-" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fire_device_info_end_time"
                                style="@style/info_text"
                                android:text="----" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    style="@style/item_info"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/info_text"
                        android:text="报警时段2：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fire_device_info_start_time2"
                                style="@style/info_text"
                                android:text="----" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="-" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fire_device_info_end_time2"
                                style="@style/info_text"
                                android:text="----" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <LinearLayout style="@style/item_info">

                <TextView
                    style="@style/info_text"
                    android:text="传感器检测时间(毫秒)：" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/check_time"
                    style="@style/info_text"
                    android:text="----" />

            </LinearLayout>


            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <LinearLayout style="@style/item_info">

                <TextView
                    style="@style/info_text"
                    android:text="人体检测时间(分钟)：" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/human_check_time"
                    style="@style/info_text"
                    android:text="----" />

            </LinearLayout>


            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/item_info"
                    android:layout_weight="1">

                    <TextView
                        style="@style/info_text"
                        android:text="重发间隔(时)：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/resend_limit"
                        style="@style/info_text"
                        android:text="----" />

                </LinearLayout>


                <LinearLayout
                    style="@style/item_info"
                    android:layout_weight="1">

                    <TextView
                        style="@style/info_text"
                        android:text="警报温度：" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/check_temperture"
                        style="@style/info_text"
                        android:text="----" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout style="@style/item_info">

                <TextView
                    style="@style/info_text"
                    android:text="温度检测时间：" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/check_temperture_time"
                    style="@style/info_text"
                    android:text="----" />

            </LinearLayout>


            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <LinearLayout
                android:id="@+id/gate_record"
                style="@style/item_info">

                <TextView
                    style="@style/info_text"
                    android:text="阀门记录" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icons_forward" />


            </LinearLayout>

            <include
                layout="@layout/common_horizontal_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </LinearLayout>
    </ScrollView>


    <LinearLayout

        android:id="@+id/deal_result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <include
            layout="@layout/common_horizontal_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp" />


        <Button
            android:id="@+id/fire_device_info_deal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_ciccle_shape_bu"
            android:gravity="center"
            android:text="处 理"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>